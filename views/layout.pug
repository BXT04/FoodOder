doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title || 'Đặt món ăn online'
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap", rel="stylesheet")
  body
    if !hideNavbar
      nav.navbar
        .nav-container
          .nav-logo
            a(href="/")
              i.fas.fa-utensils
              span Đặt món ăn online
          .nav-menu
            a.nav-link(href="/") Trang chủ
            if user
              a.nav-link(href="/orders") Đơn hàng của tôi
              if user.role === 'admin'
                a.nav-link(href="/admin") Admin
              a.nav-link(href="/logout") Đăng xuất
            else
              a.nav-link(href="/login") Đăng nhập
          .nav-toggle
            span
            span
            span

    main.main-content
      block content

    footer.footer
      .footer-content
        .footer-section
          h3 Đặt món ăn online
          p Nền tảng đặt món ăn trực tuyến tốt nhất
        .footer-section
          h3 Liên kết
          ul
            li: a(href="/") Trang chủ
            li: a(href="/about") Giới thiệu
            li: a(href="/contact") Liên hệ
        .footer-section
          h3 Liên hệ
          p
            i.fas.fa-phone
            | 0123 456 789
          p
            i.fas.fa-envelope
            | info@datmonanhonline.com
      .footer-bottom
        p &copy; 2024 Đặt món ăn online. Tất cả quyền được bảo lưu.

    script(src="/js/main.js")
    block scripts
